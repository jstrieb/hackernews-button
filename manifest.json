{
  "manifest_version": 2,

  "name": "Hacker News Discussion",
  "description": "Adds a button linking to the Hacker News discussion for the current page",
  "version": "0.1",
  "author": "Jacob Strieb",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [ "tabs" ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Y"
      }
    },
    "open_in_new_tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  },

  "background": {
    "scripts": [ "background.js" ]
  }
}
