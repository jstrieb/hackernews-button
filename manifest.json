{
  "manifest_version": 2,

  "name": "Hacker News Discussion Button",
  "description": "Adds a button linking to the Hacker News discussion for the current page",
  "version": "0.2",
  "author": "Jacob Strieb",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{eb7ac216-532c-4fa6-b17f-d1d081f9f2e1}"
    }
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "96": "icons/icon-96.png"
    }
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Y"
      }
    },
    "open_in_new_tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  },

  "content_scripts": [{
    "matches": [
      "*://news.ycombinator.com/*"
    ],
    "js": ["add-latest.js"]
  }],

  "background": {
    "page": "background.html"
  }
}
