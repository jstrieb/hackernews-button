{
  "manifest_version": 2,

  "name": "Hacker News Discussion",
  "description": "Adds a button linking to the Hacker News discussion for the current page",
  "version": "0.1",
  "author": "Jacob Strieb",

  "permissions": [ "tabs" ],

  "browser_action": {
    "default_icon": {}
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Y"
      }
    },
    "open_in_new_tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  },

  "background": {
    "scripts": [ "background.js" ]
  }
}
