{
  "manifest_version": 2,

  "name": "Hacker News Discussion Button",
  "description": "Links to the Hacker News discussion for the current page. Preserves privacy.",
  "version": "0.6.1",
  "author": "Jacob Strieb",
  "homepage_url": "https://github.com/jstrieb/hackernews-button",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{36225028-11da-4478-b711-ee0940433686}"
    }
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "96": "icons/icon-96.png"
    }
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Y"
      }
    },
    "open_in_new_tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open Hacker News discussion in a new tab"
    }
  },

  "content_scripts": [{
    "matches": [
      "*://news.ycombinator.com/*"
    ],
    "js": [
      "add-latest.js"
    ]
  }],

  "background": {
    "page": "background.html"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
